<p id="notice"><%= notice %></p>

<h2>Instructors</h2>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First</th>
      <th>Middle</th>
      <th>Last</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.email %></td>
        <td><%= instructor.first %></td>
        <td><%= instructor.middle %></td>
        <td><%= instructor.last %></td>
        <td><%= link_to 'Show', instructor, class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor), class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

