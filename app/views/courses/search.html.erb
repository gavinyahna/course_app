<div class="outer_div_wide">
    <% provide(:title, "Search") %>
    <h1 class="title">Search Courses</h1>

    <div class="inner_div">
        <%= form_tag(search_path, method: :get) do %>

        name
        <%= text_field_tag :name, params[:name], class: "form_input" %>
        <br>
        subject
        <%= select_tag :subject, options_from_collection_for_select(Subject.all, :id, :name, params[:course]), include_blank: true, class: "form_input" %>
        <br>
        <%= submit_tag ("Search"), class: "btn btn-primary" %>
        <% end %>
    </div>

    <div class="result">
        <% @courses.each do |course| %>
            <ul>
                <li>
                    <%= course.name %>
                    <%= link_to 'Enroll', search_path(:course_id => course.id, :user_id => current_user.id),method: :post, class: "btn btn-primary"%>
                </li>
            </ul>
        <% end %>
    </div>
</div>